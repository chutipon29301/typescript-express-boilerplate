{
  "name": "seating-backend",
  "version": "1.0.0",
  "description": "",
  "main": "",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts && npm run tslint",
    "serve": "node ./dist/server.js",
    "watch": "nodemon --watch 'src/**/*.ts' --exec ts-node src/server.ts",
    "build-ts": "tsc",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "repository": {
    "url": "https://github.com/monkey-monkey/seating-backend"
  },
  "author": "Chutipon Hirankanokkul & Natchapol Srisang",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.3",
    "express-validator": "^5.3.1",
    "helmet": "^3.13.0",
    "mongoose": "^5.5.10",
    "morgan": "^1.9.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/express": "^4.16.0",
    "@types/express-validator": "^3.0.0",
    "@types/helmet": "0.0.38",
    "@types/jest": "^24.0.13",
    "@types/mongodb": "^3.1.27",
    "@types/mongoose": "^5.5.1",
    "@types/morgan": "^1.7.35",
    "concurrently": "^3.6.0",
    "jest": "^24.8.0",
    "nodemon": "^1.17.5",
    "prettier": "^1.17.1",
    "ts-jest": "^24.0.2",
    "ts-node": "^7.0.0",
    "tslint": "^5.10.0",
    "typescript": "^3.0.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
